html
  head
    title= title
    style.
      body {
        font-family: Arial, sans-serif;
        margin: 20px;
      }
      .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
      }
      .btn-create {
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        text-decoration: none;
        display: inline-block;
      }
      .btn-create:hover {
        background-color: #45a049;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }
      th, td {
        border: 1px solid #ddd;
        padding: 12px;
        text-align: left;
      }
      th {
        background-color: #4CAF50;
        color: white;
      }
      tr:nth-child(even) {
        background-color: #f2f2f2;
      }
      .btn-action {
        padding: 8px 16px;
        border-radius: 4px;
        text-decoration: none;
        color: white;
        font-size: 14px;
        margin-right: 8px;
        display: inline-block;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s;
      }
      .btn-edit {
        background-color: #2196F3;
      }
      .btn-edit:hover {
        background-color: #1976D2;
      }
      .btn-details {
        background-color: #9C27B0;
      }
      .btn-details:hover {
        background-color: #7B1FA2;
      }
      td .btn-action:last-child {
        margin-right: 0;
      }
  body
    .header
      h1= title
      a.btn-create(href="/documents/create") Create New
    table
      thead
        tr
          th Name
          th Size (bytes)
          th User
          th Created At
          th Actions
      tbody
        if documents && documents.length > 0
          each document in documents
            tr
              td= document.name
              td= document.size
              td= document.user ? `${document.user.first_name} ${document.user.last_name}` : 'N/A'
              td= new Date(document.created_at).toLocaleDateString()
              td
                a.btn-action.btn-edit(href=`/documents/edit/${document.id}`) Edit
                a.btn-action.btn-details(href=`/documents/${document.id}`) Details
        else
          tr
            td(colspan="5" style="text-align: center;") No documents found









